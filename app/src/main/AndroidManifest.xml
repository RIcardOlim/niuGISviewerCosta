<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.novageo.niugisviewer">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <permission
        android:name="pt.novageo.niugisviewer.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="usuario.app.testarmenu.permission.MAPS_RECEIVE" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="pt.novageo.niugisviewer.SplashScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pt.novageo.niugisviewer.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
        android:name="android.support.Parent_Activity"
        android:value="usuario.app.testarmenu.MainActivity" />


        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyBkVs8iqeOwufEMFvrlKGiNRLdorpVOZZw" />

        <activity
            android:name="pt.novageo.niugisviewer.Activity_about"
            android:label="About"
            android:parentActivityName="pt.novageo.niugisviewer.MainActivity" />

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="pt.novageo.niugisviewer.MainActivity" />

        <activity
            android:name="pt.novageo.niugisviewer.Activity_cma"
            android:label="@string/contato_c_mara_municipal_da_amadora"
            android:parentActivityName="pt.novageo.niugisviewer.MainActivity" />

        <activity
            android:name="pt.novageo.niugisviewer.Activity_ng"
            android:label="@string/contatos_novageo"
            android:parentActivityName="pt.novageo.niugisviewer.MainActivity" />

        <activity
            android:name="pt.novageo.niugisviewer.Activity_escola"
            android:label="@string/escola_secund_ria_matias_aires"
            android:parentActivityName="pt.novageo.niugisviewer.MainActivity" />

    </application>

</manifest>