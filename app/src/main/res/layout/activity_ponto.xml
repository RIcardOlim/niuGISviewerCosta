<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:onClick="addButtonClicked"
        android:text="Adicionar"
        android:layout_below="@+id/imageView8"
        android:layout_alignLeft="@+id/inserirdesc"
        android:layout_alignStart="@+id/inserirdesc" />

    <EditText
        android:id="@+id/inserirnome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/inserirdesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/inserirnome"
        android:layout_alignLeft="@+id/inserirnome"
        android:layout_alignStart="@+id/inserirnome" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="@string/Nome_do_ponto"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/inserirnome"
        android:layout_alignStart="@+id/inserirnome" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inserirdesc"
        android:layout_alignStart="@+id/inserirdesc"
        android:layout_below="@+id/inserirnome"
        android:layout_marginTop="11dp"
        android:text="@string/descri_o" />

    <Button
        android:id="@+id/button"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnadd"
        android:layout_alignBottom="@+id/btnadd"
        android:layout_alignEnd="@+id/MudarImg"
        android:layout_alignRight="@+id/MudarImg"
        android:onClick="ViewButtonClcked"
        android:text="@string/verificar" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ponto"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/IDspinner"
        android:layout_alignLeft="@+id/btnadd"
        android:layout_alignStart="@+id/btnadd" />

    <Button
        android:id="@+id/MudarImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="MudarImagem"
        android:text="Mudar Imagem"
        android:layout_alignTop="@+id/imageView8"
        android:layout_toRightOf="@+id/imageView8"
        android:layout_alignRight="@+id/IDspinner"
        android:layout_alignEnd="@+id/IDspinner"
        android:layout_alignBottom="@+id/imageView8" />

    <Spinner
        android:id="@+id/IDspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView13"
        android:layout_alignRight="@+id/inserirdesc"
        android:layout_alignEnd="@+id/inserirdesc"
        android:layout_alignLeft="@+id/imageView8"
        android:layout_alignStart="@+id/imageView8" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/IDspinner"
        android:layout_alignStart="@+id/IDspinner"
        android:layout_below="@+id/inserirdesc"
        android:layout_marginTop="15dp"
        android:text="Tipo de Ponto" />

</RelativeLayout>