<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:onClick="addButtonClicked"
        android:text="add"
        android:layout_below="@+id/inserirdesc"
        android:layout_alignLeft="@+id/inserirdesc"
        android:layout_alignStart="@+id/inserirdesc" />

    <EditText
        android:id="@+id/inserirnome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/inserirdesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/inserirnome"
        android:layout_alignLeft="@+id/inserirnome"
        android:layout_alignStart="@+id/inserirnome" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnadd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/Nome_do_ponto"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/inserirnome"
        android:layout_alignStart="@+id/inserirnome" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inserirdesc"
        android:layout_alignStart="@+id/inserirdesc"
        android:layout_below="@+id/inserirnome"
        android:layout_marginTop="11dp"
        android:text="@string/descri_o" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="ViewButtonClcked"
        android:text="@string/verificar"
        android:layout_above="@+id/textView12"
        android:layout_alignRight="@+id/inserirdesc"
        android:layout_alignEnd="@+id/inserirdesc" />
</RelativeLayout>